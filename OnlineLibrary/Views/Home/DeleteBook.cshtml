
@{
    ViewBag.Title = "DeleteBook";
}

<h2 style="margin-left:15%;">DeleteBook</h2>



<div>
    <form method="post" action="" class="form-control-static">
        <p>Are you sure you want to delete this book?</p>
        <input type="hidden" value="@ViewBag.Book.Name" name="Name" />
        <input type="hidden" value="@ViewBag.Book.Quantity" name="Quantity" />
        <input type="hidden" value="@ViewBag.Book.Id" name="Id" />

        <input class="btn-danger" type="submit" value="Yes" />
    </form>
    <h4 class="h4">@Html.ActionLink("Back to book list.", "Index", "Home"); </h4>
</div>
